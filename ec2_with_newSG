AWSTemplateFormatVersion: '2010-09-09'
Description: Create an EC2 instance with a Security Group using CloudFormation

Resources:
  MySecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Allow SSH, HTTP access, and all outbound traffic
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
      SecurityGroupEgress:
        - IpProtocol: -1
          FromPort: -1
          ToPort: -1
          CidrIp: 0.0.0.0/0

  MyEC2Instance:
    Type: AWS::EC2::Instance
    Properties:
      InstanceType: t2.micro
      ImageId: ami-0c94855ba95c71c99
      KeyName: ansiblenverginia
      SecurityGroups:
        - !Ref MySecurityGroup
      Tags:
        - Key: Name
          Value: MyEC2Instance

Outputs:
  InstanceId:
    Description: The Instance ID
    Value: !Ref MyEC2Instance
  PublicIp:
    Description: The Public IP of the instance
    Value: !GetAtt MyEC2Instance.PublicIp
  VpcId:
    Description: The VPC ID of the instance
    Value: !GetAtt MyEC2Instance.VpcId
  SubnetId:
    Description: The Subnet ID of the instance
    Value: !GetAtt MyEC2Instance.SubnetId
  SecurityGroupId:
    Description: The Security Group ID
    Value: !Ref MySecurityGroup
